{
  "rules": {
    "asyncapi-contact-properties": {
      "description": "Contact object should have `name`, `url` and `email`.",
      "recommended": true,
      "formats": [
        "asyncapi2"
      ],
      "severity": 2,
      "type": "style",
      "given": "$.info.contact",
      "then": [
        {
          "field": "name",
          "function": "truthy"
        },
        {
          "field": "url",
          "function": "truthy"
        },
        {
          "field": "email",
          "function": "truthy"
        }
      ]
    }
  }
}
